<div class="auth-container">
    <h2>Registrarse</h2>
    
    <div id="successMessage" class="success-message" style="display: none;">
        <h3>✅ Registro exitoso</h3>
        <p>Tu cuenta ha sido creada correctamente. Redirigiendo al login...</p>
    </div>
    
    <div id="errorMessage" class="error-message" style="display: none;">
        <h3>❌ Error en el registro</h3>
        <p id="errorText"></p>
    </div>
    
    <form id="registerForm">
        <input type="text" id="first_name" placeholder="Nombre" required>
        <input type="text" id="last_name" placeholder="Apellido" required>
        <input type="email" id="email" placeholder="Email" required>
        <input type="number" id="age" placeholder="Edad" required>
        <input type="password" id="password" placeholder="Contraseña" required>
        <button type="submit" id="registerButton">Registrarse</button>
    </form>
    <p><a href="/login">¿Ya tienes cuenta? Inicia sesión</a></p>
</div>

<script>
    document.getElementById('registerForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const button = document.getElementById('registerButton');
        const successMessage = document.getElementById('successMessage');
        const errorMessage = document.getElementById('errorMessage');
        const form = document.getElementById('registerForm');
        
        // Cambiar texto del botón y deshabilitarlo
        button.textContent = 'Registrando...';
        button.disabled = true;
        
        // Ocultar mensajes previos
        successMessage.style.display = 'none';
        errorMessage.style.display = 'none';
        
        const formData = {
            first_name: document.getElementById('first_name').value,
            last_name: document.getElementById('last_name').value,
            email: document.getElementById('email').value,
            age: parseInt(document.getElementById('age').value),
            password: document.getElementById('password').value
        };
        
        try {
            const response = await fetch('/api/sessions/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData),
            });
            
            const data = await response.json();
            
            if (data.status === 'success') {
                // Mostrar mensaje de éxito
                successMessage.style.display = 'block';
                form.style.display = 'none';
                
                // Redirigir después de 2 segundos
                setTimeout(() => {
                    window.location.href = '/login';
                }, 2000);
            } else {
                // Mostrar mensaje de error
                errorMessage.style.display = 'block';
                document.getElementById('errorText').textContent = data.message || 'Error desconocido';
                
                // Restaurar botón
                button.textContent = 'Registrarse';
                button.disabled = false;
            }
        } catch (error) {
            // Mostrar mensaje de error de conexión
            errorMessage.style.display = 'block';
            document.getElementById('errorText').textContent = 'Error de conexión. Inténtalo de nuevo.';
            
            // Restaurar botón
            button.textContent = 'Registrarse';
            button.disabled = false;
        }
    });
</script>
