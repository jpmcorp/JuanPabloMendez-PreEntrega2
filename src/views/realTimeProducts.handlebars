<h2>Formulario de Actualización de Productos</h2>

<form id="form">
  <div class="form-grid">
    <label for="input-title">Título:</label>
    <input type="text" id="input-title" required />

    <label for="input-description">Descripción:</label>
    <input type="text" id="input-description" required />

    <label for="input-code">Código:</label>
    <input type="number" id="input-code" min="1" step="1" required />

    <label for="input-price">Precio:</label>
    <input type="number" id="input-price" min="0" step="0.01" required />

    <label for="input-status">Estado:</label>
    <input type="text" id="input-status" required />

    <label for="input-stock">Stock:</label>
    <input type="number" id="input-stock" min="1" step="1" required />

    <label for="input-category">Categoría:</label>
    <input type="text" id="input-category" required />

    <label for="input-thumbnail">Miniatura:</label>
    <input type="text" id="input-thumbnail" required />
  </div>

  <div class="form-actions">
    <input type="submit" value="Enviar" />
  </div>
</form>

<div id="product-list">
  <p>Cargando productos...</p>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/main.js"></script>
